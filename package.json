{
  "name": "ts-experiments",
  "version": "1.0.0",
  "description": "A collection of fun and/or useful things you can do with TypeScript.",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts --fix",
    "test": "jest",
    "tocs": "ts-node -r tsconfig-paths/register tools/generate-tocs.ts",
    "pretocs:commit": "git diff-index --quiet HEAD",
    "tocs:commit": "npm run tocs",
    "posttocs:commit": "git add . && git commit -m \"chore(tocs): update TOCs\" && git push",
    "prettier": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "prepare": "husky install"
  },
  "private": true,
  "keywords": [],
  "author": "JanMalch",
  "repository": {
    "type": "git",
    "url": "https://github.com/JanMalch/ts-experiments"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "@ts-experiments/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
