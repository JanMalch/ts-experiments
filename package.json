{
  "name": "ts-experiments",
  "version": "1.0.0",
  "description": "A collection of fun and/or useful things you can do with TypeScript.",
  "scripts": {
    "build": "tsc",
    "prelint": "ts-node tools/check-for-missing-author-doc-tag.ts",
    "lint": "eslint src/**/*.ts --fix",
    "test": "jest",
    "tocs": "ts-node tools/generate-tocs.ts",
    "prettier": "prettier --write \"./**/*.{ts,js,json,md}\""
  },
  "keywords": [],
  "author": "JanMalch",
  "repository": {
    "type": "git",
    "url": "https://github.com/JanMalch/ts-experiments"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleNameMapper": {
      "@ts-experiments/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/*.ts"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"./**/*.{ts,js,json,md}\" && npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
